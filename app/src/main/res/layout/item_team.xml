<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/tvTeamName"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTeamName"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Stadium"
        android:id="@+id/Stadium"
        />

    <TextView
        app:layout_constraintStart_toEndOf="@id/Stadium"
        app:layout_constraintTop_toTopOf="@id/tvTeamName"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/tvTeamHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        app:layout_constraintStart_toStartOf="@id/Stadium"
        app:layout_constraintTop_toTopOf="@id/Stadium"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/ivTeamBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
